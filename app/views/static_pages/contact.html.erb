<% provide(:title, 'Contact') %>
<h1>Contact</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@contact, url: { controller: 'contacts', action: 'confirm' }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_area :content, rows: 10 %>

      <%= f.submit "Confirm", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>